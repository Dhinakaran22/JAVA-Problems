// Average of n natural numbers.

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int n = input.nextInt();

        float count = 0,c = 0;
        while (count < n) {
            count++;
            c = count + c;
        }
        c = c / n;
        System.out.println(c);

    }
}
