//Writes a function that returns the sum of first n natural numbers.
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        
        // Input from user
        Scanner input = new Scanner(System.in);
        int n = input.nextInt();
        
        // The returned value should be stored in the variable ans.
        int ans = natural_numbers(n);
        System.out.println(ans);
    }
    static int natural_numbers(int n) {
        int i,sum = 0;
        for (i = 1; i <= n; i++) {
            sum = sum + i;
        }
        // Returning the value to the main function.
        return sum;
    }
}
